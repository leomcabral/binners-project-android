<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp">

    <ImageView
        android:id="@+id/imgTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p3_text_top"
        app:layout_marginTopPercent="10%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%" />

    <ImageView
        android:id="@+id/imgCircle"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="50%"
        android:src="@drawable/start_p3_circle"
        app:layout_marginTopPercent="16%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginRightPercent="16%"/>

    <ImageView
        android:id="@+id/imgTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p3_text_bottom"
        android:layout_below="@+id/imgCircle"
        android:layout_alignRight="@+id/imgCircle"
        android:layout_alignLeft="@+id/imgCircle"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%" />

    <ImageView
        android:id="@+id/imgTextBottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_p3_text_bottom_2"
        android:layout_below="@+id/imgTextBottom"
        android:layout_alignRight="@+id/imgCircle"
        android:layout_alignLeft="@+id/imgCircle"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="5%"/>

    <ImageView
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        android:id="@+id/imgPageCounter"
        android:src="@drawable/start_p3_counter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_marginBottomPercent="3%"/>

    <Button
        android:id="@+id/imgSkipButton"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        android:textColor="#26752d"
        android:background="@color/backgroundApp"
        android:text="Skip"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_marginRightPercent="3%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</android.support.percent.PercentRelativeLayout>